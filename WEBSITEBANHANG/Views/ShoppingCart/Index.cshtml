@model ShoppingCart


<div class="container">
    <h2>Your Cart</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Remove</th>
                <th>Checkout</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items){
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td><a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a></td>
                <td><a asp-action="Checkout" >
                            <button type="button" class="btn btn-primary active">Checkout</button>
                </a></td>
            </tr>
            }
        </tbody>
    </table>
</div>